# Production Environment Configuration
NODE_ENV=production
PORT=3002

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/craft-production
DB_NAME=craft-production

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-super-secret-session-key-change-in-production

# CORS Configuration
CORS_ORIGINS=http://192.168.10.83:3001,http://localhost:3000,http://localhost:3001,http://localhost:3002

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Azure AD Configuration (Optional - currently disabled)
# AZURE_CLIENT_ID=your-azure-client-id
# AZURE_CLIENT_SECRET=your-azure-client-secret
# AZURE_TENANT_ID=your-azure-tenant-id
# AZURE_REDIRECT_URI=http://192.168.10.83:3001/auth/azure/callback

# Health Check
HEALTH_CHECK_ENDPOINT=/health
API_INFO_ENDPOINT=/api/v1/info

# Node.js HTTP server configuration to prevent 431 errors
NODE_OPTIONS=--max-http-header-size=32768